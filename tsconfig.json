{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "node16",
    "target": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["**/*"]
}
